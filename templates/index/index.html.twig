{% extends 'base.html.twig' %}
{% block title%} Liste des Ticket{% endblock %}
{% block body %}
{% if Ticket %}
<table id="Ticket" class="table table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>Titre</th>
        <th>Personne</th>
        <th>Description</th>
        <th>Date</th>
        <th>Statut</th>
        <th>Actions</th>

    </tr>
    <div>
        <a href="/Ticket/new/{id}" class="btn btn-primary btn-lg">Creation Nouveau Ticket</a>
    </div>

    </thead>
    <tbody>



    {% for Ticket in Ticket %}

    <tr>
        <td>{{ Ticket.id}}</td>
        <td>{{ Ticket.titre}}</td>
        <td>{{ Ticket.personne}}</td>
        <td>{{ Ticket.description}}</td>
        <td>{{ Ticket.date |date('Y-m-d H:i:s')}}</td>
        <td>{{ Ticket.statut}}</td>

        <td>
            <a href="/Ticket/{{ Ticket.id }}" class="btn btn-dark">DÃ©tails</a>
            <a href="/Ticket/edit/{{ Ticket.id }}" class="btn btn-success">Modifier</a>
            <a href="/Ticket/delete/{{ Ticket.id }}" class="btn btn-danger">Supprimer</a>

        </td>

    {% endfor %}

    </tbody>
</table>
{% else %}
    <p>Aucun Tickets</p>
{% endif %}
            {{ knp_pagination_render(Ticket) }}
{% endblock %}